<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ExpenseTrackerController">
    <TableView fx:id="expenseTable" layoutX="50.0" layoutY="50.0" prefHeight="300.0" prefWidth="500.0">
        <columns>
            <TableColumn text="Amount" fx:id="amountColumn"/>
            <TableColumn text="Category" fx:id="categoryColumn"/>
            <TableColumn text="Date" fx:id="dateColumn"/>
        </columns>
    </TableView>
    <Button layoutX="50.0" layoutY="360.0" onAction="#addExpense" text="Add Expense"/>
</AnchorPane>
